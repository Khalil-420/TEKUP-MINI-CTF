extends layout.pug

block scripts
  script(src="/js/login.js")
  
block content
  .row.justify-content-center 
    .col-md-6
      h1 User Login
      p Login with a valid username and password
      form#login_form
        .form-group
          label(for="username" class="sr-only") Username
          input(type="text" name="username" class="form-control" placeholder="Username" required)
        .form-group
          label(for="password" class="sr-only") Password
          input(type="password" name="password" class="form-control" placeholder="Password" required)
        button#login_submit(type="submit" class="btn btn-primary mb-3") Login 

      div#response(style="font-weight: bold; color: red") 
